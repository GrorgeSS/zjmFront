
.box{
  background-color: #eee;
  position: relative;
}

.introduce{
  display: flex;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}

.introduce-state{
  position: absolute;
  top: 30rpx;
  right: 50rpx;
}


.address-box{
  background-color: #fff;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.address{
  position: relative;
  font-size: 28rpx;
  margin: 40rpx
}

.tel{
  margin-left: 20rpx
}

.right{
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
    position: absolute;
    right: 40rpx;
    top: 10rpx
}

.add-new-address{
  width: 350rpx;
  height: 80rpx;
  border-radius: 80rpx;
  color: blue;
  border: 1rpx solid blue;
  text-align: center;
  line-height: 80rpx;
  margin: 30rpx auto
}

.icon{
  font-weight: bold
}


.product{
  height: 150rpx;
  position: relative;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
  margin-top: 35rpx
}

.product-image{
  width: 175rpx;
  height: 175rpx;
  position: absolute;
  top: -20rpx;
  left: 40rpx
}

.product-image image{
  width: 100%;
  height: 100%
}

.name{
  position: absolute;
  left: 220rpx;
  top: 10rpx
}

.price{
  position: absolute;
  right: 40rpx;
  top: 10rpx
}

.number{
  position: absolute;
  right: 40rpx;
  bottom: 10rpx;
}

.button-icon{
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: #333;
  color: #fff;
  display: inline-block;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 40rpx
}

.number-change{
  display: inline-block;
  margin-left: 20rpx;
  margin-right: 20rpx 
}


.using{
  height: 150rpx;
  line-height: 150rpx;
  position: relative;
  background-color: #fff;
  color: #999;
  font-size: 30rpx;
}

.using-text{
  margin: 0 40rpx;
  display: inline-block
}

.using-number{
  display: inline-block;
  position: absolute;
  right: 40rpx
}

.money{
  font-size: 26rpx;
  color: #ccc;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #fff;
  margin-top: 10rpx
}

.red{
  color: red
}

.money-left{
  margin-left: 40rpx
}

.money-right{
 position: absolute;
 right: 80rpx;
}

.message{
  padding: 8rpx 40rpx;
  font-size: 26rpx;
  background-color: #fff;
  color: #999;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #eee
}

.order{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border-top: 1rpx solid #eee
}

.order-text{
  margin-left: 30rpx
}

.order-money{
  margin-left: 40rpx;
  color: red
}

.order-submit{
  display: inline-block;
  width: 200rpx;
  height: 80rpx;
  background-color: #fff600;
  text-align: center;
  position: absolute;
  right: 0
}