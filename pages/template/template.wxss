/* pages/template/template.wxss */

.rank-item-box {
  padding: 0 15px;
}

.rank-box {
  margin-top: 15px;
}

.rank-title {
  font-size: 17px;
  margin-left: 20px;
}

.rank-item {
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
  padding: 5px 0;
  border-bottom: 1px solid #e9e9e9;
}

.rank-icon-box {
  height: 54rpx;
  width: 21%;
}

.rank-icon {
  width: 54rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  color: gray;
}

.user-name {
  font-size: 18px;
  text-align: center;
}

.amount {
  display: inline-block;
  width: 20%;
  font-size: 17px;
  text-align:right;
}
