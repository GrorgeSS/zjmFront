.details-container{
    width: 100%;
    height: auto;
    background-color: rgba(250, 250, 250, 1)
}

.showNoOrder{
  font-size: 40rpx;
  background: transparent;
  color: gray;
  position: absolute;
  width: 160rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  margin-left: -80rpx;
  margin-top: -100rpx;
}

.order-item{
    width: 100%;
    height: 460rpx;
    background-color: #fff;
    margin-bottom: 40rpx;
}

.product-details{
    width: 100%;
    height: 172rpx;
    display: flex;
}

.product-details .pic {
    width: 190rpx;
    height: 190rpx;
    margin: 50rpx 50rpx;
}

.product-details .pic image{
    width: 190rpx;
    height: 190rpx;
}

.product-details .detail{
    flex: 1;
    height: 172rpx;
    margin-top: 44rpx
}

.product-details .detail view:nth-of-type(1){
    text-align: left;
    font-size: 32rpx;
    height: 60rpx;
    vertical-align: top;

}

.product-details .detail view:nth-of-type(2){
    text-align: left;
    font-size: 26rpx;
    height: 76rpx;
    vertical-align: top;
}


.product-details .univalent{
    width: 172rpx;
    height: 172rpx;
    line-height: 172rpx;
    text-align: right;
    margin-right: 30rpx;
}

.product-status{
    width: 100%;
    padding-right: 30rpx;
    box-sizing: border-box;
    height: 74rpx;
    line-height: 74rpx;
    color: rgba(204, 141, 67, 1);
    text-align: right;
}

.product-price{
    width: 100%;
    height: 74rpx;
    text-align: right;
    padding-right: 30rpx;
    box-sizing: border-box;
}

.product-price view{
    display: inline-block;
    font-size: 24rpx;
    line-height: 74rpx;
}

.product-price .freight view,.product-price .num view,.product-price .num view{
    color: rgba(204, 141, 67, 1);
}

.product-btnSet{
    width: 100%;
    height: 90rpx;
    text-align: right;
}

.product-btnSet view{
  display: inline-block;
    width: 160rpx;
    height: 68rpx;
    line-height: 68rpx;
    border-radius: 4px;
    color: rgba(16, 16, 16, 1);
    font-size: 28rpx;
    text-align: center;
    font-family: Microsoft Yahei;
    border: 1px solid rgba(187, 187, 187, 1);
    margin: 0 30rpx 0 0;
}
