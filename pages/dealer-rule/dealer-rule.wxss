.rule-container{
    width: 100%;
    height: 3000rpx;
    position: relative;
    left: 0;
    top: 0;
    background-image: url("https://api.txzyzjm.xyz/imgs/dealRuleBack.jpg");
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.input-container{
    position: absolute;
    left: 0;
    bottom: 200rpx;
    width: 100%;
    padding: 30rpx 100rpx 50rpx;
    box-sizing: border-box;
    height: auto;
}

.input-container .input-item{
    width: 100%;
    height: 100rpx;
    display: flex;
}

.input-container .input-item label{
    width: 114rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: right;
    font-size: 28rpx;
    color: #fff;
}

.input-container .input-item input{
    flex: 1;
    height: 60rpx;
    border-bottom: 1px solid #fff;
    padding-bottom: 2rpx;
    vertical-align: middle;
    margin-top: 20rpx;
    margin-left: 40rpx;
    padding-left: 20rpx;
    font-size: 28rpx;
    color: #fff;
}
.btn{
    left: 47px;
    top: 750px;
    width: 273px;
    height: 30px;
    line-height: 30px;
    margin: 20rpx 0;
    border-radius: 4px;
    background-color: #738ec1;
    color: rgba(255, 255, 255, 1);
    font-size: 14px;
    text-align: center;
    font-family: Microsoft Yahei;
}